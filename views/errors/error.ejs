<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="checkerboard">
    <a class="skip-link" href="#main">Skip to content</a>

    <div class="page">
      <%- include('../partials/brandbar') %>
      <%- include('../partials/navigation') %>

      <header class="container page-header">
        <h1 class="page-title"><%= title || (status === 404 ? '404 – Page Not Found' : '500 – Server Error') %></h1>
        <% if (message) { %><p class="muted"><%= message %></p><% } %>
        <% if (typeof status !== 'undefined') { %>
          <p class="muted">Status code: <%= status %></p>
        <% } %>
      </header>

      <main id="main" class="container main-content">
        <p><a class="btn-primary" href="/">Go back home</a></p>
      </main>

      <%- include('../partials/footer') %>
    </div>
  </body>
</html>

