<!-- views/partials/header.ejs -->
<header class="app-header">
  <div class="container topbar">
    <h1 class="brand">CSE Motors</h1>
    <a class="account" href="/account">My Account</a>   <!-- absolute path -->

  </div>

  <%- include('./navigation') %>

  <!-- Hero -->
<div class="container hero">
  <h2 class="welcome">Welcome to CSE Motors!</h2>

  <div class="hero-stage">
    <!-- Car image sits behind the card -->
    <img class="hero-car" src="/images/vehicles/delorean.jpg" alt="DMC Delorean" />

    <!-- Transparent info card -->
    <div class="hero-card">
      <h3 class="car-name">DMC Delorean</h3>
      <ul class="car-features">
        <li>3 Cup holders</li>
        <li>Superman doors</li>
        <li>Fuzzy dice</li>
      </ul>
      <a href="#" class="btn-primary">Own Today</a>
    </div>
  </div>
</div>

</header>


